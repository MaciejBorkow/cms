    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django - runserver",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/cms/manage.py",
            "justMyCode": false
        },
        {
            "name": "Django - migrations",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "migrate"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/cms/manage.py",
            "justMyCode": false
        }
    ],
    "inputs": [
        {
            "id": "scriptPath",
            "type": "promptString",
            "description": "Enter the relative path to the Python script you want to run"
        }
    ]
}